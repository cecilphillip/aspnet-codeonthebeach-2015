@model Demos.Config.CustomConfigOptions

@{
    ViewData["Title"] = "Configuration";
}

<div class="row mb25">
    <div class="col-md-12">
        <div class="box-tab">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#demo-render" data-toggle="tab">Configuration Values</a>
                </li>
                <li>
                    <a href="#demo-code" data-toggle="tab">Configuration Classes</a>
                </li>
            </ul>
            <div class="tab-content ">
                <div class="tab-pane fade active in" id="demo-render">

                    <h4>Configuration Options   </h4>
                    <div class="col-lg-5 col-md-6">
                        <section class="panel">                            
                            <div class="panel-body">
                                <form role="form">
                                    <div class="form-group">
                                        <label asp-for="@Model.Conference"></label>
                                        <input type="text" asp-for="@Model.Conference"  class="form-control" disabled="disabled" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Website"></label>
                                        <input type="text" asp-for="@Model.Website" class="form-control" disabled="disabled" readonly="readonly" />
                                    </div>                                    
                                </form>
                            </div>
                        </section>
                    </div>

                    <div class="col-lg-5 col-md-6">
                        <section class="panel">
                            <div class="panel-body">
                                <form role="form">
                                    <div class="form-group">
                                        <label asp-for="@Model.Location.Address"></label>
                                        <input type="tex" asp-for="@Model.Location.Address" class="form-control" disabled="disabled" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Location.Phone"></label>
                                        <input type="tel" asp-for="@Model.Location.Phone" class="form-control" disabled="disabled" readonly="readonly" />
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>

                </div>
                <div class="tab-pane fade" id="demo-code">
                    <pre><code class="cs">
 public class CustomConfigOptions
 {
    public string Conference { get; set; }
    public string Website { get; set; }
    public LocationOptions Location { get; set; }
                        

    public class LocationOptions
    {
        public string Venue { get; set; }
        public string Address { get; set; }
        public string phone { get; set; }
    }
 }
 
public void ConfigureServices(IServiceCollection services)
{          
    services.Configure&lt;CustomConfigOptions&gt;(Configuration.GetConfigurationSection("Custom"));
 }
                                                         </code></pre>
                </div>
            </div>
        </div>
    </div>
</div>
